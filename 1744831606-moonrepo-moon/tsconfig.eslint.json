{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
		"emitDeclarationOnly": false,
		"noEmit": true
  },
  "parserOptions": {
    "extraFileExtensions": [".mjs"]
  },
  "include": [
    "**/.eslintrc.cjs",
    "packages/*/src/**/*",
    "packages/*/tests/**/*",
    "packages/*/types/**/*",
    "packages/*/*.cjs",
    "packages/*/*.ts",
    "scripts/**/*",
    "website/src/**/*",
    "website/*.js",
    "website/*.ts",
  ],
  "exclude": [
    "**/*.css",
    "packages/*/tsconfig.json"
  ]
}
